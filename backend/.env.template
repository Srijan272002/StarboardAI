# Environment (development, staging, production)
ENVIRONMENT=development

# API Settings
# Set to true to require real API data (will fail if APIs are unavailable)
REAL_API_REQUIRED=false
# Set to true to allow mock data as fallback in development
ALLOW_MOCK_DATA=true

# County API Keys - You need to obtain these from the respective county websites
COOK_COUNTY_API_KEY=
DALLAS_COUNTY_API_KEY=
LA_COUNTY_API_KEY=

# County API URLs - Update these if the endpoints change
COOK_COUNTY_API_URL=https://datacatalog.cookcountyil.gov/resource/93st-4bxh.json
DALLAS_COUNTY_API_URL=https://www.dallascad.org/api/Property
LA_COUNTY_API_URL=https://assessor.lacounty.gov/api/property

# Database Settings
POSTGRES_SERVER=localhost
POSTGRES_USER=starboard
POSTGRES_PASSWORD=password
POSTGRES_DB=starboard_db

# CORS Settings - Add your frontend URL
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging
LOG_LEVEL=INFO

# API Configuration
API_KEY_HEADER=X-API-KEY

# Rate Limiting
DEFAULT_RATE_LIMIT=100

# Redis Settings (optional)
# REDIS_URL=redis://localhost:6379/0
# RATE_LIMIT_REDIS_URL=redis://localhost:6379/1 